{
  "name": "react-native-webview-comlink",
  "version": "0.6.0",
  "description": "Add JavaScript interface for react-native-webview based on Comlink",
  "main": "lib/web/web.js",
  "react-native": "lib/native/native.js",
  "module": "lib/web/web.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "npm run clean && npm run tsc && npm run rollup && node replace-script.js",
    "tsc": "tsc -d",
    "rollup": "rollup --config",
    "release": "npm run build && standard-version && git push --follow-tags origin master && npm publish",
    "test": "jest --forceExit",
    "start": "concurrently npm:start:tsc npm:start:rollup npm:start:msf-web npm:start:example-web npm:start:msf-native npm:start:example-native",
    "start:tsc": "npm run tsc -- --watch",
    "start:rollup": "npm run rollup -- --watch",
    "start:msf-web": "msf --mode update lib examples/web/node_modules/react-native-webview-comlink/lib",
    "start:msf-native": "msf --mode update lib examples/native/node_modules/react-native-webview-comlink/lib",
    "start:example-web": "cd examples/web && npm start",
    "start:example-native": "cd examples/native && npm start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rocwind/react-native-webview-comlink.git"
  },
  "keywords": [
    "comlink",
    "rpc",
    "react-native",
    "webview"
  ],
  "author": "Roc",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rocwind/react-native-webview-comlink/issues"
  },
  "homepage": "https://github.com/rocwind/react-native-webview-comlink#readme",
  "dependencies": {
    "comlinkjs": "^3.2.0",
    "hoist-non-react-statics": "^3.3.2",
    "message-port-polyfill": "^0.2.0",
    "wait-ready": "^0.5.4"
  },
  "devDependencies": {
    "@babel/core": "7.13.15",
    "@babel/plugin-transform-runtime": "7.13.15",
    "@babel/preset-env": "7.13.15",
    "@babel/runtime": "7.13.10",
    "@rollup/plugin-babel": "5.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@types/hoist-non-react-statics": "3.3.1",
    "@types/jest": "26.0.22",
    "@types/react": "17.0.3",
    "@types/react-native": "0.64.2",
    "concurrently": "6.0.1",
    "jest": "26.6.3",
    "metro-react-native-babel-preset": "0.65.2",
    "msf-cli": "1.1.0",
    "react": "16.11.0",
    "react-native": "0.63.4",
    "react-native-webview": "11.3.2",
    "react-test-renderer": "17.0.1",
    "rollup": "2.45.1",
    "rollup-plugin-cleanup": "3.2.1",
    "standard-version": "9.2.0",
    "ts-jest": "26.5.4",
    "typescript": "4.2.4"
  }
}
